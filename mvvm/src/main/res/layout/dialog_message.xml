<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_dialog_message_bg"
    android:layout_gravity="center_horizontal"
    android:padding="@dimen/px_20">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="@dimen/px_26"/>

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_20"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@android:color/black"
        android:textSize="@dimen/px_26"/>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="@dimen/px_120"
        android:layout_height="@dimen/px_70"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/px_20"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/px_90"
        android:textSize="@dimen/px_26"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="@dimen/px_120"
        android:layout_height="@dimen/px_70"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/px_20"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/px_90"
        android:textSize="@dimen/px_26"
        android:textColor="@android:color/black" />

    <Button
        android:visibility="gone"
        android:id="@+id/btn_know"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_70"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/px_20"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginHorizontal="@dimen/px_90"
        android:textSize="@dimen/px_26"
        android:textColor="@android:color/black" />

</androidx.constraintlayout.widget.ConstraintLayout>